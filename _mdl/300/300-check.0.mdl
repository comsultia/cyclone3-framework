			SELECT
				nickname
			FROM
				a120
			WHERE
				nickname='$main::USRM{'login'}' AND
				IDtype=1
			LIMIT 1
		");
		if (not my %db0_line=$db0->fetchhash())
		{
			$main::DB{'main'}->Query("
				INSERT INTO a120
				(
					IDcategory,
					IDtype,
