 #!/usr/bin/perl
# áéíóú - USE UTF-8 !!!
package Tomahawk::module;
use open ':utf8', ':std';
use encoding 'utf8';
use utf8;
use App::540;
use App::540::dir;
use strict;

## a540 Delete Category
## > id = ID of the category to delete
## < no return

sub execute
{
	my %env=@_;
	return 1 if !$env{'id'};
	return 1 if !$env{'lng'};
	Tomahawk::GetXSGN(-convertvars=>1) || return undef;

	App::540::dir::del(ID_dir=>"=".$env{'id'}, lng=>"=".$env{'lng'} );

	$XSGN{TMP}=$XSGN{RESULT_success};
	$XSGN{TMP}=~s/<%ID%>/$env{'id'}/;
	return 1;
}
1;
