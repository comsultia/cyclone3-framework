#!/usr/bin/perl
# áéíóú - USE UTF-8 !!!
package Tomahawk::module;
use open ':utf8', ':std';
use encoding 'utf8';
use utf8;
use App::540;
use App::540::file;

use strict;

sub execute
{
	main::_log("MODULE START!");
	my %env=@_;
	Tomahawk::GetXSGN(-convertvars=>1) || return undef;

	my %arg;
	$arg{ID}=$env{ID};
	$arg{ID_dir}="00";
	$arg{ID_dir}=$env{dir} if defined($env{dir});
	$arg{active}=$env{active} if defined($env{active});
	$arg{lng}=$env{lng} if defined($env{lng});
	$arg{comment}=$env{comment} if defined($env{comment});
	$arg{mime}=$env{mime} if defined($env{mime});
	$arg{name}=$env{name} if defined($env{name});
	my $id=-1;
# Menime len zaznam
	if (length($env{ID})>0)
	{
		$id = App::540::file::set( %arg );
		if ($id<0)
		{
			main::_log("Edit Failed!: $arg{name}");
			$XSGN{TMP} = $XSGN{'TMP_no_data'};
			return 1;
		}
	}else{
		my $file = $env{file};
		# Obsah suboru
		$arg{handle}=$main::FORM{$file};
		# Ak to nieje file tak dalsi
		next if !$arg{handle};
		# (HACK) File Name
		$main::FORM{multipart} =~ /name="$file"; filename="(.*?)"/;
		$arg{name} = $1;
		$arg{name}=$env{name} if defined($env{name});
		# Pridanie do DB
		$id = App::540::file::new( %arg );
		if ($id<0)
		{
			main::_log("Upload Failed! file: $arg{name}");
			$XSGN{TMP} = $XSGN{'TMP_no_data'};
			return 1;
		}
	}
	main::_log("><><><: ID:".$id);
	$XSGN{TMP} =~ s|<%ID%>|$id|g;

	return 1;
}
1;
