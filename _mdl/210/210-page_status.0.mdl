#!/usr/bin/perl
# USE UTF-8 !!!
package Tomahawk::module;
use open ':utf8', ':std';
use encoding 'utf8';
use utf8;
use strict;

use App::020;

sub execute
{
	my %env=@_;
	Tomahawk::GetXSGN('-convertvars'=>1) || return undef;
	
	if (!$env{'ID'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|ID|g;
		return 1;
	}
	
	if (!$env{'status'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|status|g;
		return 1;
	}
	
	my $out;
	
	if ($env{'status'} eq "Y")
	{
		$out=App::020::SQL::functions::enable(
			'db_h' => "main",
			'db_name' => $TOM::DB{'main'}{'name'},
			'tb_name' => "a210_page",
			'-journalize' => 1,
			'ID'   => $env{'ID'},
		);
	}
	elsif ($env{'status'} eq "N")
	{
		$out=App::020::SQL::functions::disable(
			'db_h' => "main",
			'db_name' => $TOM::DB{'main'}{'name'},
			'tb_name' => "a210_page",
			'-journalize' => 1,
			'ID'   => $env{'ID'},
		);
	}
=head1
	elsif ($env{'status'} eq "T")
	{
		$out=App::020::SQL::functions::to_trash(
			'db_h' => "main",
			'db_name' => $TOM::DB{'main'}{'name'},
			'tb_name' => "a210_page",
			'-journalize' => 1,
			'ID'   => $env{'ID'}
		);
	}
	elsif ($env{'status'} eq "D")
	{
		$out=App::020::SQL::functions::delete(
			'db_h' => "main",
			'db_name' => $TOM::DB{'main'}{'name'},
			'tb_name' => "a210_page",
			'-journalize' => 1,
			'ID'   => $env{'ID'}
		);
	}
=cut
	else
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_set'};
		$XSGN{'TMP'}=~s|<%ID%>|$env{'ID'}|g;
		return 1;
	}
	
	if ($out)
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_success'};
		$XSGN{'TMP'}=~s|<%ID%>|$env{'ID'}|g;
		
		my %data=App::020::SQL::functions::get_ID(
			'db_h' => "main",
			'db_name' => $TOM::DB{'main'}{'name'},
			'tb_name' => "a210_page",
			'-journalize' => 1,
			'columns'=>
			{
				'status' => 1
			},
			'ID'   => $env{'ID'}
		);
		
#		if (!$data{'ID'})
#		{
#			$XSGN{'TMP'}=~s|<%status%>|D|g;
#		}
#		else
#		{
			$XSGN{'TMP'}=~s|<%status%>|$data{'status'}|g;
#		}
	}
	else
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_set'};
		$XSGN{'TMP'}=~s|<%ID%>|$env{'ID'}|g;
		return 1;
	}
	
	return 1;
}



1;
