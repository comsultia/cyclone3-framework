			$db0_line{reqdatetime}=~s/^\d\d\d\d\-\d\d\-\d\d (\d\d).*$/$1/;
		
			$table{$db0_line{reqdatetime}}{visits_percent} = int(($db0_line{visits}/($max/100)));
