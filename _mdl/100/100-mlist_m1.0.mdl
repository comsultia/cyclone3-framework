#!/usr/bin/perl
# áéíóú - USE UTF-8 !!!
package Tomahawk::module;
use open ':utf8', ':std';
use encoding 'utf8';
use utf8;
use strict;

use TOM::Database::SQL;
use DateTime;

our $debug = 1;

sub execute
{
	my %env=@_;

	Tomahawk::GetXSGN(-convertvars=>1) || return undef; # load design file

	my $today = DateTime->now()->strftime('%Y-%m-%d');

	my $where = "
		t.status='Y' AND
		e.status='Y'
	";
	
	if ( $env{'db_domain'} )
	{
		$env{'db_domain'} = '' if $env{'db_domain'} eq 'no_domain';
		$where .= ' AND ' if $where;
		$where .= "t.domain='$env{'db_domain'}'";
	}

	my $sql = qq/
	SELECT
		t.ID,
		t.domain,
		if(t.domain!='',t.domain,'no_domain') as domain_link,
		t.name as name,
		if(
			max(e.datetime_create)>='$today', date_format(max(e.datetime_create), '\%H:\%i'),
			date_format(max(e.datetime_create), '\%d. \%m. \%Y')
		) as last_error,
		max(e.ID) as last_error_id,
		count(e.ID) as error_count
	FROM
		TOM.a100_ticket as t LEFT JOIN
		TOM.a100_ticket_event as e ON
			e.ID_ticket=t.ID
	WHERE
		$where
	GROUP BY
		t.ID
	ORDER BY
		t.ID DESC
	/;
	my %sth = TOM::Database::SQL::execute( $sql, 'log' => $debug);

	if ( $sth{'rows'} )
	{
		while ( my %row = $sth{'sth'}->fetchhash )
		{
			my $line = $XSGN{'LINE'};

			$row{'name'} =~ s|^(dmdl)/.*/(.*)|$1/$2|;
			while ( my ($k,$v) = each %row ) { $line =~ s|<%$k%>|$v|g; }
			
			$XSGN{'TMP'} =~ s|<#LINE#>|$line|;
		}
	}

	return 1;
}

