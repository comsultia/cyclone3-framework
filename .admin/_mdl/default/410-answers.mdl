sub BaseModul
{
  my $IDquestion=$form{idquestion} if ($form{idquestion});
  my $IDanswer=$form{ID} if ($form{ID});

  my $haluzaren;

  if ($form{set} eq "yes")
  {
   $form{year1}-=1900;
   $form{year2}-=1900;
   $form{mom1}--;
   $form{mom2}--;
   my $starttime=Time::Local::timelocal(undef,$form{min1},$form{hour1},$form{day1},$form{mom1},$form{year1},undef,undef,undef);
   my $endtime=Time::Local::timelocal(undef,$form{min2},$form{hour2},$form{day2},$form{mom2},$form{year2},undef,undef,undef);

   if ($IDanswer>0)
	{
       if (exists $form{allow_endtime}) {$endtime=",endtime='$endtime'";} else {$endtime=",endtime='0'";}
	  $db_microx = $dbh->Query("UPDATE TOM.Ca410_answer SET answer='$form{answer}',IDeditor='$form{IDeditor}',starttime='$starttime'$endtime WHERE ID='$IDanswer'");
	}
	else
	{
		if (not exists $form{allow_endtime}) {$endtime="0";}
		$db_microx = $dbh->Query("
		INSERT INTO TOM.Ca410_answer
		(ID, IDquestion, answer, starttime, endtime, IDauthor, IDeditor, votes, lng, active)
		VALUES
		('', '$IDquestion', '$form{answer}', '$starttime', '$endtime', '', '$form{IDeditor}', '', 'sk', 'N');
		");
	}

  }

  my $answers=<<"HEADER";
  <style>
	.a-img { cursor: hand; }
	.ank-answers, a, div, span { font-family: verdana; font-size: 12px; }
	a { color: black; font-weight: bold; text-decoration: none }
  </style>
HEADER

  $db_microx = $dbh->Query("SELECT * FROM TOM.Ca410_answer WHERE IDquestion='$IDquestion' AND lng='sk'");

  while (%db_microx_line=$db_microx->FetchHash())
  {
	my $cl_active="r";
	if ($db_microx_line{'active'} eq "Y"){$cl_active="g"}
	$answers.="
	<div>
	  <div style=\"float: left; width: 400px\">
	   <div style=\"float: left; width: 15px\">
	    <img class=\"a-img\" src=\"$tom::H_media/grf/admin/list_".$cl_active.".gif\" width=11 height=12 border=0 onclick=\"this.src='core.pl?type=set_active&db_name=TOM&table=Ca410_answer&id=$db_microx_line{ID}';\">
	   </div>
	   <div style=\"float: right; width: 385px\">
	    <a href=\"javascript:load_box('core.pl?type=410-answers_edit&idquestion=$IDquestion&id=".$db_microx_line{ID}."&frm=".$form{frm}."')\">
	     $db_microx_line{answer}
	    </a>
	   </div>
	  </div>
	  <a href=\"core.pl?type=410-answer_del&id=$db_microx_line{ID}&frm=$form{frm}\" target=\"frm_micro\" style=\"display: block; float: right; margin-right: 4px\">
	   <img src=\"$tom::H_media/grf/admin/close.gif\" height=\"12\" width=\"12\" border=0>
	  </a>
	</div>
	<div style=\"clear: both\" />\n";
  }

  return "<div class=\"ank_-answers\"><div style=\"margin-bottom: 5px;\"><a style=\"font-weight: bold; text-decoration: none;\" href=\"core.pl?type=410-answers_edit&idquestion=$IDquestion&id=&frm=$form{frm}\" target=\"frm_micro\"><font color=white>nov√°</font></a></div>$answers</div>";
}

1;
