sub BaseModul
{
 my $ID=$form{ID};
 my $table="TOM.Ca410_category";

 if ($form{set}eq"yes")
 {
  my $db_micro = $dbh->Query("
	UPDATE
	$table
	SET name='$form{name}' WHERE ID='$ID' LIMIT 1");

=head1

  my $uroven=my @from=split('',$ID);
  my @chars;
  my $fullname_new;

  my $db_micro = $dbh->Query("
	SELECT
	ID,fullname
	FROM $table
	WHERE ID='$ID'
	LIMIT 1");
  if (my @db_micro_line=$db_micro->FetchRow())
  {$fullname_new=$db_micro_line[1];}

  my $db_micro = $dbh->Query("
	SELECT
	ID,fullname,tinyname,starttime,about,active
	FROM $table
	WHERE ID LIKE '$ID%'
	ORDER BY ID");
  while (my @db_micro_line=$db_micro->FetchRow())
  {
   my @ref=split('',$db_micro_line[0]);
   my $char=unpack "C",$ref[$uroven];
   $chars[$char]=1 if $char;
  }

  my $i;
	# 48-57   [0-9]
	# 65-90	  [A-Z]
	# 97-122  [a-z]
  for (48..57,65..90,97..122) # 59 znakov
  {
   next if $i;
   $i=$_ unless $chars[$_];
  }

  my $ur=pack "C",$i;

  $from[$uroven]=$ur;
  $from_w=join "",@from;
  $fullname_new.="/".$form{tinyname};
  $fullname_new=~s|^/||;
  $dbh->Query("
	INSERT INTO $table
	(ID,fullname,tinyname,starttime,about,active)
	VALUES('$from_w','$fullname_new','$form{tinyname}','$current_time','','N')");
=cut
  return "\n<script>\nparent.document.frames['frm_base'].location.reload();\n</script>";

 }
 else
 {
  $HTML_HEADER{BODY}{extract}="yes";

  my $db_micro = $dbh->Query("
	SELECT
	ID,name,xdata
	FROM $table
	WHERE ID='$ID' LIMIT 1");
my $name;
  if (my @db_micro_line=$db_micro->FetchRow())
  {
   $name=$db_micro_line[1];
  }

 my $mdl_temp=<<"HEADER";
