sub BaseModul
{
 
 my $db_micro = $dbh->Query("
 	SELECT value 
	FROM _config
	WHERE variable='cache_reload_$form{cat}'
		AND type='PRTL'
	LIMIT 1");
 if (my @db_micro_line=$db_micro->FetchRow())
 {
  &save_log(0,"reload cache of portal $form{cat}");
  $dbh->Query("
  	UPDATE _config 
	SET value='$current_time' 
	WHERE variable='cache_reload_$form{cat}'
		AND type='PRTL'
	LIMIT 1");
 }
 else
 {
   &save_log(0,"Writing reload of cache of portal $form{cat}");
   $dbh->Query("
  	INSERT INTO _config(variable,value,type)
	VALUES('cache_reload_$form{cat}','$current_time','PRTL')");
 }
 return 1;
}













