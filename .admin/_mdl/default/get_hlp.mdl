sub BaseModul
{ 
 my $id=$form{id};
 open (HND,"<_hlp/".$id.".hlp");
 my $data="a";
 my $helptext;
 while ($data)
 {
  $data=<HND>;
  $helptext.=$data."<BR>";
 }

 $HTML_HEADER{BODY}{extract}="yes";
 my $box=&box_create2("&nbsp;Assistant...",
	'color_title0'	=>	"blue",
	'width'			=>	250,
	'height_start'	=>	50,
	'close'			=>	"yes",
	'html'			=>	$helptext);
 return $box;
}













