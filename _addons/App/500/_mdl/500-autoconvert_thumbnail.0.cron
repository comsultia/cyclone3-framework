# USE UTF-8 !!!
package CRON::module;
use strict;

sub execute
{
	my %env=@_;
	
	
	my $sql=qq{
		SELECT
			*
		FROM
			a500_attrs
		ORDER BY
			ID
	};
	my %sth0=TOM::Database::SQL::execute($sql,'quiet'=>1);
	while (my %db0_line=$sth0{'sth'}->fetchhash())
	{
		my $sql=qq{
			SELECT
				*
			FROM
				a500
			WHERE
				ID=$db0_line{'ID'}
				AND format='t'
			LIMIT 1
		};
		my %sth1=TOM::Database::SQL::execute($sql,'quiet'=>1);
		if (!$sth1{'rows'})
		{
			main::_log("ID '$db0_line{'ID'}' missing 't'");
			
			my $sql=qq{SELECT * FROM a500 WHERE ID=$db0_line{'ID'} AND format='o' LIMIT 1};
			my %sth1=TOM::Database::SQL::execute($sql,'quiet'=>1);
			if (!$sth1{'rows'})
			{
				main::_log("ID '$db0_line{'ID'}' missing 'o'");
				
				
				# vyrobim si 'o' z 'f' ak existuje
				my $sql=qq{SELECT * FROM a500 WHERE ID=$db0_line{'ID'} AND format='f' LIMIT 1};
				my %sth1=TOM::Database::SQL::execute($sql,'quiet'=>1);
				if (!$sth1{'rows'})
				{
					main::_log("ID '$db0_line{'ID'}' missing 'f'");
					next;
				}
				my %db1_line=$sth1{'sth'}->fetchhash();
				
				my $dir=sprintf('%07d',$db1_line{'ID'});
				$dir=~s|^(....).*$|\1|;
				my $filename="$dir/$db1_line{'hash'}-f.jpg";
				my $hash=TOM::Utils::vars::genhash(16);
				
				use File::Copy;
				File::Copy::copy($tom::P.'/!media/500/'.$filename,$tom::P.'/!media/500/'.$dir.'/'.$hash.'-o.jpg');
				
				my $sql=qq{
					INSERT INTO a500
					(
						ID,
						IDattrs,
						hash,
						IDcategory,
						IDeditor,
						format,
						changetime,
						size,
						lng,
						active
					)
					VALUES
					(
						$db1_line{'ID'},
						$db1_line{'ID'},
						'$hash',
						'$db1_line{'IDcategory'}',
						'$db1_line{'IDeditor'}',
						'o',
						'$main::time_current',
						'',
						'sk',
						'Y'
					)
				};
				TOM::Database::SQL::execute($sql,'quiet'=>1);
				
				
				next;
			}
			my %db1_line=$sth1{'sth'}->fetchhash();
			
			# convert 't' from 'o'
			use Image::Magick;
			my $img = new Image::Magick;
			
			my $dir=sprintf('%07d',$db1_line{'ID'});
			$dir=~s|^(....).*$|\1|;
			my $filename="$dir/$db1_line{'hash'}-o.jpg";
			if (!-e $tom::P.'/!media/500/'.$filename)
			{
				main::_log("pruser",1);
				next;
			}
			
			$img->Read($tom::P.'/!media/500/'.$filename);
			$img->Thumbnail('geometry'=>"120x120");
			
			my $hash=TOM::Utils::vars::genhash(16);
			
			main::_log("hash $hash");
			
			$img->Write($tom::P.'/!media/500/'.$dir.'/'.$hash.'-t.jpg');
			
			my $sql=qq{
				INSERT INTO a500
				(
					ID,
					IDattrs,
					hash,
					IDcategory,
					IDeditor,
					format,
					changetime,
					size,
					lng,
					active
				)
				VALUES
				(
					$db1_line{'ID'},
					$db1_line{'ID'},
					'$hash',
					'$db1_line{'IDcategory'}',
					'$db1_line{'IDeditor'}',
					't',
					'$main::time_current',
					'',
					'sk',
					'Y'
				)
			};
			TOM::Database::SQL::execute($sql,'quiet'=>1);
			
		}
		
	}
	
	return 1;
	
