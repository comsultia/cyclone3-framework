#!/usr/bin/perl
# USE UTF-8 !!!
package Tomahawk::module;
use open ':utf8', ':std';
use encoding 'utf8';
use utf8;
use strict;

use App::020::_init;

=head1 NAME

910-product_cat_new.0.mdl

=cut

=head1 DESCRIPTION

Create new product category

=cut

=head1 INPUTS

=over

=item *

B<name> - meno záznamu

=item *

B<ID_parent> - Parent ID do ktorého sa vytvorí položka

=item *

B<lng> - jazyk page

=back

=cut

=head1 XSGN

=over

=item *

B<TMP> - defaultne error

=item *

B<RESULT_success> - bez erroru

=item *

B<RESULT_failure_no_input> - zlý vstup

=item *

B<RESULT_failure_set> - nepodarilo sa vykonať

=item *

B<&lt;%ID%&gt;> - ID

=item *

B<&lt;%missing_parameter%&gt;> - chýbajúci parameter

=back

=cut

sub execute
{
	my %env=@_;
	Tomahawk::GetXSGN('-convertvars'=>1) || return undef;
	delete $env{'ID_charindex'};
	
	my $from;
	my $tb_name='a910_product_cat';
	
	if (!$env{'name'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|name|g;
		return 1;
	}
	
	$env{'name'}=~s|\'|\\'|;
	
	my $ID=App::020::SQL::functions::tree::new(
		'db_h' => "main",
		'db_name' => $TOM::DB{'main'}{'name'},
		'tb_name' => $tb_name,
		'-journalize' => 1,
		'parent_ID'   => $env{'ID_parent'},
		'columns' =>
		{
			'name' => "'$env{'name'}'",
			'lng'  => "'$env{'lng'}'",
			'status'  => "'N'",
		}
	);
	
	if ($ID)
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_success'};
		$XSGN{'TMP'}=~s|<%ID%>|$ID|g;
	}
	else
	{
		
	}
	
	return 1;
}

