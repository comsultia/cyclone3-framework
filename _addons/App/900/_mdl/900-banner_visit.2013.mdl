#			UPDATE
#				`$App::900::db_name`.a900_banner
#			SET
#				stats_views = ?
#			WHERE
#				ID_entity = ?
#		},'-quiet'=>1,'bind'=>[
#			$db0_line{'cnt'},
#			$ID
#		]);
	
	}
	
	return 1,%env_out;
}

1;
