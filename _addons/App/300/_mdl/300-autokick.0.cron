#!/usr/bin/perl
# USE UTF-8 !!!
package CRON::module;
use TOM;
use strict;

sub execute
{
	
	my %env=@_;
	if (!$env{max_online}){$cron::ERR="not defined max_online for maxtime online";return undef;}
	
	if ($cron::P eq $CRON::P)
	{
		main::_log("WARN: global cron, manipulating with all hosts in TOM-database!!!");
		$env{db_300}="TOM";
		$env{sel0}="reqtime<$cron::time_current-$env{max_online} OR active='N'";
	}
	else
	{
		return 1;
	}

	my $db0=$main::DB{main}->Query("
		SELECT
			*
		FROM TOM.a300_online
		WHERE
			$env{sel0}
	");
	while (my %user=$db0->fetchhash)
	{
		main::_log("kick user IDhash:".$user{IDhash}." login:".$user{login}." old:".($cron::time_current-$user{reqtime}));
		my $db0=$main::DB{main}->Query("
			SELECT
				*
			FROM TOM.a300_users
			WHERE
				IDhash='$user{IDhash}'
				$env{sel1}
			LIMIT 1");
		if (my %user0=$db0->fetchhash)
		{
			main::_log("je lognuty") if ($user{logged} eq "Y");
			main::_log("nelognuty") if ($user{logged} ne "Y");
			main::_log("anonymny user") if (!$user0{login});
			main::_log("autorizovany user") if ($user0{login});
			if	(
					(($user{logged} eq "Y")&&($user0{login}))
					||(($user{logged} ne "Y")&&(!$user0{login}))
				)
			{
				main::_log("prevediem zapis");
				$user0{cookies}="";
				while ($user{cookies}=~s|<VAR id="(.*?)">(.*?)</VAR>||)
				{
					my $var=$1;
					my $value=$2;
					if ($var=~/^_/){$user0{cookies}.="<VAR id=\"".$var."\">".$value."</VAR>\n";next}
				}
				
				$main::DB{main}->Query("
					UPDATE TOM.a300_users
					SET
						logtime = '$user{logtime}',
						reqtime = '$user{reqtime}',
						IPlast = '$user{IP}',
						rqs = rqs+$user{rqs},
						cookies = '$user0{cookies}'
					WHERE
						IDhash='$user{IDhash}'
						$env{sel1}
					LIMIT 1
				");
				
				$main::DB{main}->Query("
					DELETE FROM TOM.a300_online
					WHERE
						IDhash='$user{IDhash}'
						$env{sel1}
					LIMIT 1
				");
			}
			else
			{
				main::_log("neprevediem zapis, deleting");
				if (
					$main::DBH->Query("
						DELETE FROM
							TOM.a300_online
						WHERE
							IDhash='$user{IDhash}'
							$env{sel1}
						LIMIT 1
					")
				)
				{main::_log("deleted");}
				else
				{main::_log("not deleted :(",1);}
			}
		}
		else
		{
			main::_log("user nieje vobec v a300_users!!!");
			main::_log("neprevediem zapis, deleting");
			if (
				$main::DBH->Query("
					DELETE FROM TOM.a300_online
					WHERE
						IDhash='$user{IDhash}'
						$env{sel1}
					LIMIT 1
				")
			)
			{main::_log("deleted");}
			else
			{main::_log("not deleted :(",1);}
		}
	}
	
	return 1;
}



1;























