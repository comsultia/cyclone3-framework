#   $XSGN{TMP}=~s|<%VERIFY%>|checked| if $db0_line[1] eq "Y";
#  }

  $XSGN{TMP}=~s|<%EMAIL%>|$db0_line[0]|g;
  $XSGN{TMP}=~s|<%VERIFY%>|checked| if $db0_line[1] eq "Y";

 }


return 1}


1;











