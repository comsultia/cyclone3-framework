 my %URL_IDcat; # kazdy clanok ina linka :)
 if ($env{URL_IDcat})
 {foreach (keys %env){$_=~/^URL_IDcat_(.*)$/ && do{$URL_IDcat{'URL_IDcat_'.$1}=$env{'URL_IDcat_'.$1};};}}

