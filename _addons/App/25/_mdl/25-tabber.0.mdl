			}
=cut
	  	}
		foreach (sort keys %datestamps)
		{
			my $tmp;
			if ($datestamps{$_} eq $env{datestamp})
			{if ($tab_activations[$_] eq "1") {$var=$XSGN{DAY_TAB_ACTUAL};} else {$var="";}}
			elsif ($_ eq "0")
			{if ($tab_activations[0] eq "1") {$var=$XSGN{PREV_WEEK};} else {$var="";}}
