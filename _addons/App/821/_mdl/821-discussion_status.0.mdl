#!/usr/bin/perl
# USE UTF-8 !!!
package Tomahawk::module;
use open ':utf8', ':std';
use encoding 'utf8';
use utf8;
use strict;

use App::821::_init;

=head1 NAME

821-discussion_status.0.mdl

=cut

=head1 DESCRIPTION

Change status of discussion

=cut


sub execute
{
	my %env=@_;
	Tomahawk::GetXSGN('-convertvars'=>1) || return undef;
	
	if (!$env{'discussion.ID'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|discussion.ID|g;
		return 1;
	}
	
	if (!$env{'discussion.ID_forum'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|discussion.ID_forum|g;
		return 1;
	}
	
	if (!$env{'discussion.status'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|discussion.status|g;
		return 1;
	}
	
	my $sql=qq{
		SELECT
			ID
		FROM
			`$App::821::db_name`.a821_discussion
		WHERE
			ID = $env{'discussion.ID'} AND
			ID_forum = $env{'discussion.ID_forum'}
		LIMIT 1
	};
	my %sth0=TOM::Database::SQL::execute($sql);
	my %db0_line=$sth0{'sth'}->fetchhash();
	
	if ($db0_line{'ID'})
	{
		if ($env{'discussion.status'} eq "Y")
		{
			App::020::SQL::functions::enable(
				'db_h' => "main",
				'db_name' => $App::821::db_name,
				'tb_name' => 'a821_discussion',
				'-journalize' => 1,
				'ID' => $db0_line{'ID'},
			);
		}
		elsif ($env{'discussion.status'} eq "N")
		{
			App::020::SQL::functions::disable(
				'db_h' => "main",
				'db_name' => $App::821::db_name,
				'tb_name' => 'a821_discussion',
				'-journalize' => 1,
				'ID' => $db0_line{'ID'},
			);
		}
		else
		{
			$XSGN{'TMP'}=$XSGN{'RESULT_failure_set'};
			$XSGN{'TMP'}=~s|<%ID%>|$env{'discussion.ID'}|g;
			return 1;
		}
	}
	
	return 1;
}


