#!/usr/bin/perl
# USE UTF-8 !!!
package Tomahawk::module;
use open ':utf8', ':std';
use encoding 'utf8';
use utf8;
use strict;

use App::821::_init;

=head1 NAME

821-discussion_move_to_trash.0.mdl

=cut

=head1 DESCRIPTION

Remove discussion

=cut


sub execute
{
	my %env=@_;
	Tomahawk::GetXSGN('-convertvars'=>1) || return undef;
	
	if (!$env{'discussion.ID'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|discussion.ID|g;
		return 1;
	}
	
	App::020::SQL::functions::to_trash
	(
		'ID' => $env{'discussion.ID'},
		'db_h' => 'main',
		'db_name' => $App::821::db_name,
		'tb_name' => 'a821_discussion',
		'-journalize' => 1,
	);
	$XSGN{'TMP'}=$XSGN{'RESULT_success'};
	
	return 1;
}


our $authors='open@comsultia.com';

