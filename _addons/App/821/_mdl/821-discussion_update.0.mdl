#!/usr/bin/perl
# USE UTF-8 !!!
package Tomahawk::module;
use open ':utf8', ':std';
use encoding 'utf8';
use utf8;
use strict;

use App::020::_init;
use App::821::_init;
use Int::charsets::encode;

=head1 NAME

821-discussion_update.0.mdl

=cut

=head1 DESCRIPTION

Update discussion item

=cut

=head1 INPUTS

=over

=item *

B<discussion.ID> - ID of item

=item *

B<discussion.ID_forum> - ID_forum

=back

=cut

=head1 XSGN

=over

=item *

B<TMP> - default error

=item *

B<RESULT_success> - without error

=item *

B<RESULT_failure_no_input> - invalid input

=item *

B<RESULT_failure_set> - can't be executed

=item *

B<%ID%> - ID

=item *

B<%missing_parameter%> - missing param

=back

=cut

sub execute
{
	my %env=@_;
	Tomahawk::GetXSGN('-convertvars'=>1) || return undef;
	
	if (!$env{'discussion.ID'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|discussion.ID|g;
		return 1;
	}
	
	if (!$env{'discussion.ID_forum'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|discussion.ID_forum|g;
		return 1;
	}
	
	my %columns;
	
	$columns{'description'}="'".TOM::Security::form::sql_escape($main::RPC->{'discussion.description'})."'"
		if exists $main::RPC->{'discussion.description'};
	$columns{'name'}="'".TOM::Security::form::sql_escape($main::RPC->{'discussion.name'})."'"
		if exists $main::RPC->{'discussion.name'};
	$columns{'name_url'}="'".TOM::Security::form::sql_escape(TOM::Net::URI::rewrite::convert($main::RPC->{'discussion.name'}))."'"
		if exists $main::RPC->{'discussion.name'};
	
	App::020::SQL::functions::update(
		'ID' => $env{'discussion.ID'},
		'db_h' => 'main',
		'db_name' => $App::821::db_name,
		'tb_name' => 'a821_discussion',
		'columns' => {%columns},
		'-journalize' => 1
	);
	
	$XSGN{'TMP'}=$XSGN{'RESULT_success'};
	$XSGN{'TMP'}=~s|<%ID%>|$env{'discussion.ID'}|g;
	
	return 1;
}

