#!/usr/bin/perl
# USE UTF-8 !!!
package Tomahawk::module;
use open ':utf8', ':std';
use encoding 'utf8';
use utf8;
use strict;

use App::020::_init;
use App::821::_init;

=head1 NAME

821-discussion_new.0.mdl

=cut

=head1 DESCRIPTION

Create new discussion item

=cut


sub execute
{
	my %env=@_;
	Tomahawk::GetXSGN('-convertvars'=>1) || return undef;
	delete $env{'ID_charindex'};
	
	my $from;
	
	if (!$env{'discussion.name'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|name|g;
		return 1;
	}
	
	my $ID=App::020::SQL::functions::new(
		'db_h' => 'main',
		'db_name' => $App::821::db_name,
		'tb_name' => 'a821_discussion',
		'columns' => 
		{
			'name' => "'".TOM::Security::form::sql_escape($env{'discussion.name'})."'",
			'name_url' => "'".TOM::Security::form::sql_escape(TOM::Net::URI::rewrite::convert($env{'discussion.name'}))."'",
			'ID_forum' => $env{'discussion.ID_forum'},
			'lng' => "'".$env{'lng'}."'"
		},
		'-journalize' => 1
	);
	
	if ($ID)
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_success'};
		$XSGN{'TMP'}=~s|<%ID%>|$ID|g;
		$XSGN{'TMP'}=~s|<%ID_forum%>|$env{'discussion.ID_forum'}|g;
	}
	else
	{
		
	}
	
	return 1;
}

our $authors='roman.fordinal@comsultia.com';

=head1 AUTHORS

Roman Fordinal (roman.fordinal@comsultia.com)

=cut

1;
