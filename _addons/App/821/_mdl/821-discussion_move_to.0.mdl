#!/usr/bin/perl
# USE UTF-8 !!!
package Tomahawk::module;
use open ':utf8', ':std';
use encoding 'utf8';
use utf8;
use strict;

use App::821::_init;

=head1 NAME

821-discussion_move_to.0.mdl

=cut

=head1 DESCRIPTION

Move discussion item into another discussion_forum

=cut

=head1 INPUTS

=over

=item *

B<discussion.ID> - ID of item

=item *

B<discussion.ID_forum> - New ID_forum

=back

=cut

=head1 XSGN

=over

=item *

B<TMP> - default error

=item *

B<RESULT_success> - without error

=item *

B<RESULT_failure_no_input> - invalid input

=item *

B<RESULT_failure_set> - can't be executed

=item *

B<%ID%> - ID

=item *

B<%missing_parameter%> - missing param

=back

=cut

sub execute
{
	my %env=@_;
	Tomahawk::GetXSGN('-convertvars'=>1) || return undef;
	
	if (!$env{'discussion.ID'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|discussion.ID|g;
		return 1;
	}
	
	if (!$env{'discussion.ID_forum'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|discussion.ID_forum|g;
		return 1;
	}
	
	foreach my $ID(split(';',$env{'discussion.ID'}))
	{
		next unless $ID;
		
=head1
		my %attrs=App::401::functions::article_add(
			'article.ID' => $ID,
			'article_attrs.ID_category'   => $env{'article_attrs.ID_category'}
		);
=cut
		
		App::020::SQL::functions::update(
			'ID' => $ID,
			'db_h' => 'main',
			'db_name' => $App::821::db_name,
			'tb_name' => "a821_discussion",
			'columns' =>
			{
				'ID_forum' => $env{'discussion.ID_forum'}
			}
		);
		
	}
	
	$XSGN{'TMP'}=$XSGN{'RESULT_success'};
	$XSGN{'TMP'}=~s|<%ID%>|$env{'discussion.ID'}|g;
	
	return 1;
}

