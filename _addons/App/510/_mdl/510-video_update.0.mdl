#!/usr/bin/perl
# USE UTF-8 !!!
package Tomahawk::module;
use open ':utf8', ':std';
use encoding 'utf8';
use utf8;
use strict;

use App::020::_init;
use App::510::_init;

=head1 NAME

510-video_update.0.mdl

=cut

=head1 DESCRIPTION

Update video descriptions

=cut

=head1 INPUTS

=over

=item *

B<video.ID> - ID of item

=item *

B<video_attrs.ID_category> - In this ID_category

=back

=cut

=head1 XSGN

=over

=item *

B<TMP> - default error

=item *

B<RESULT_success> - without error

=item *

B<RESULT_failure_no_input> - invalid input

=item *

B<RESULT_failure_set> - can't be executed

=item *

B<%ID%> - ID

=item *

B<%missing_parameter%> - missing param

=back

=cut

sub execute
{
	my %env=@_;
	Tomahawk::GetXSGN('-convertvars'=>1) || return undef;
	
	if (!$env{'video.ID'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|video.ID|g;
		return 1;
	}
	
	if (!$env{'video_attrs.ID_category'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|video_attrs.ID_category|g;
		return 1;
	}
	
	my %columns;
	
	$columns{'video_attrs.name'}=$main::RPC->{'video_attrs.name'}
		if $main::RPC->{'video_attrs.name'};
	$columns{'video_attrs.description'}=$main::RPC->{'video_attrs.description'}
		if exists $main::RPC->{'video_attrs.description'};
	
	$columns{'video.datetime_rec_start'}=$main::RPC->{'video.datetime_rec_start'}
		if exists $main::RPC->{'video.datetime_rec_start'};
	$columns{'video.datetime_rec_stop'}=$main::RPC->{'video.datetime_rec_stop'}
		if exists $main::RPC->{'video.datetime_rec_stop'};
	
	my %attrs=App::510::functions::video_add(
		'video.ID' => $env{'video.ID'},
		'video_attrs.ID_category'  => $env{'video_attrs.ID_category'},
		%columns
	);
	
	$XSGN{'TMP'}=$XSGN{'RESULT_success'};
	$XSGN{'TMP'}=~s|<%ID%>|$env{'video.ID'}|g;
	
	return 1;
}

