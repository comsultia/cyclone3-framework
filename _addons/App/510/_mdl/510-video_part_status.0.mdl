#!/usr/bin/perl
# USE UTF-8 !!!
package Tomahawk::module;
use open ':utf8', ':std';
use encoding 'utf8';
use utf8;
use strict;

use App::510::_init;

=head1 NAME

510-video_part_status.0.mdl

=cut

=head1 DESCRIPTION

Change status of video_part

=cut


sub execute
{
	my %env=@_;
	Tomahawk::GetXSGN('-convertvars'=>1) || return undef;
	
	if (!$env{'video_part.ID'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|video_part.ID|g;
		return 1;
	}
	
	if (!$env{'video_part.status'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|video_part.status|g;
		return 1;
	}
	
	my $sql=qq{
		SELECT
			ID
		FROM
			`$App::510::db_name`.a510_video_part
		WHERE
			ID = $env{'video_part.ID'}
		LIMIT 1
	};
	my %sth0=TOM::Database::SQL::execute($sql);
	my %db0_line=$sth0{'sth'}->fetchhash();
	
	if ($db0_line{'ID'})
	{
		if ($env{'video_part.status'} eq "Y")
		{
			App::020::SQL::functions::enable(
				'db_h' => "main",
				'db_name' => $App::510::db_name,
				'tb_name' => 'a510_video_part',
				'-journalize' => 1,
				'ID' => $db0_line{'ID'},
			);
			$XSGN{'TMP'}=$XSGN{'RESULT_success'};
			$XSGN{'TMP'}=~s|<%ID%>|$env{'video.ID'}|g;
			return 1;
		}
		elsif ($env{'video_part.status'} eq "N")
		{
			App::020::SQL::functions::disable(
				'db_h' => "main",
				'db_name' => $App::510::db_name,
				'tb_name' => 'a510_video_part',
				'-journalize' => 1,
				'ID' => $db0_line{'ID'},
			);
			$XSGN{'TMP'}=$XSGN{'RESULT_success'};
			$XSGN{'TMP'}=~s|<%ID%>|$env{'video.ID'}|g;
			return 1;
		}
		else
		{
			$XSGN{'TMP'}=$XSGN{'RESULT_failure_set'};
			$XSGN{'TMP'}=~s|<%ID%>|$env{'video_part.ID'}|g;
			return 1;
		}
	}
	
	return 1;
}


