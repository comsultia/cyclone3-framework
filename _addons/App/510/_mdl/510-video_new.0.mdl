#!/usr/bin/perl
# USE UTF-8 !!!
package Tomahawk::module;
use open ':utf8', ':std';
use encoding 'utf8';
use utf8;
use strict;

use App::020::_init;
use App::510::_init;

=head1 NAME

510-video_new.0.mdl

=cut

=head1 DESCRIPTION

Create a new video item

=cut


sub execute
{
	my %env=@_;
	Tomahawk::GetXSGN('-convertvars'=>1) || return undef;
	delete $env{'ID_charindex'};
	
	my $from;
	
	if (!$env{'video_attrs.name'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|video_attrs.name|g;
		return 1;
	}
	
	if (!$env{'video_attrs.ID_category'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|video_attrs.ID_category|g;
		return 1;
	}
	
	my %columns;
	
	if ($env{'file'} && -e $env{'file'} && not -d $env{'file'})
	{
		$columns{'file'}=$env{'file'};
	}
	
	my %video=App::510::functions::video_add(
		'video_attrs.name' => $env{'video_attrs.name'},
		'video_attrs.ID_category' => $env{'video_attrs.ID_category'},
		%columns,
	);
	
	
	if ($video{'video.ID'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_success'};
		$XSGN{'TMP'}=~s|<%ID%>|$video{'video.ID'}|g;
		$XSGN{'TMP'}=~s|<%ID_entity%>|$video{'video.ID_entity'}|g;
		$XSGN{'TMP'}=~s|<%ID_category%>|$video{'video_attrs.ID_category'}|g;
	}
	else
	{
		
	}
	
	return 1;
}

our $authors='roman.fordinal@comsultia.com';

=head1 AUTHORS

