#!/usr/bin/perl
# USE UTF-8 !!!
package Tomahawk::module;
use open ':utf8', ':std';
use encoding 'utf8';
use utf8;
use strict;



=head1 NAME

510-video_detail.0.mdl

=head1 DESCRIPTION

Detail info about video

=head1 DEPENDS

=over

=item *

L<App::510::_init|app/"510/_init.pm">

=back

=cut

use App::510::_init;



=head1 INPUTS

=over

=item *

B<video.ID> - ID of video

=item *

B<video.ID_category> - ID_category of video

=item *

B<image_attrs.status> - required status (default 'Y')

=back

=cut



=head1 XSGN

=over

=item *

B<TMP> - video item

=item *

B<%db_*%> - video database variables

=back

=cut



sub execute
{
	my %env=@_;
	Tomahawk::GetXSGN('-convertvars'=>1) || return undef;
	
	if (!$env{'video.ID'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|video.ID|g;
		return 1;
	}
	
	if (!$env{'video_attrs.ID_category'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|video_attrs.ID_category|g;
		return 1;
	}
	
	my $sql=qq{
		SELECT
			video.*
		FROM
			`$App::510::db_name`.a510_video_view AS video
		WHERE
			video.ID_video = $env{'video.ID'} AND
			video.ID_category = $env{'video_attrs.ID_category'} AND
			video.lng = '$env{'lng'}'
		LIMIT 1
	};
	my %sth0=TOM::Database::SQL::execute($sql,'log'=>1,'slave'=>1);
	while (my %db0_line=$sth0{'sth'}->fetchhash())
	{
		
		$XSGN{'TMP'}=~s|<%db_(.*?)%>|$db0_line{$1}|g;
		
		if ($db0_line{'ID_format'} eq $App::510::video_format_original_ID)
		{
			$XSGN{'TMP'}=~s|<%original.db_(.*?)%>|$db0_line{$1}|g;
		}
		
		my $format=$XSGN{'format'};
		
		$format=~s|<%db_(.*?)%>|$db0_line{$1}|g;
		
		$XSGN{'TMP'}=~s|<#format#>|$format|;
		
	}
	
	return 1;
}


