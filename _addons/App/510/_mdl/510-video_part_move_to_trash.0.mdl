#!/usr/bin/perl
# USE UTF-8 !!!
package Tomahawk::module;
use open ':utf8', ':std';
use encoding 'utf8';
use utf8;
use strict;

use App::510::_init;

=head1 NAME

510-video_part_move_to_trash.0.mdl

=cut

=head1 DESCRIPTION

Remove video_part from video

=cut


sub execute
{
	my %env=@_;
	Tomahawk::GetXSGN('-convertvars'=>1) || return undef;
	
	if (!$env{'video_part.ID'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|video_part.ID|g;
		return 1;
	}
	
	# video_part_file
	my $sql=qq{
		SELECT
			ID
		FROM
			`$App::510::db_name`.a510_video_part_file
		WHERE
			ID_entity = $env{'video_part.ID'} AND
			status IN ('Y','N')
	};
	my %sth0=TOM::Database::SQL::execute($sql);
	while (my %db0_line=$sth0{'sth'}->fetchhash())
	{
		App::020::SQL::functions::to_trash
		(
			'ID' => $db0_line{'ID'},
			'db_h' => 'main',
			'db_name' => $App::510::db_name,
			'tb_name' => 'a510_video_part_file',
			'-journalize' => 1,
		);
	}
	
	# video_part_file
	my $sql=qq{
		SELECT
			ID
		FROM
			`$App::510::db_name`.a510_video_part_attrs
		WHERE
			ID_entity = $env{'video_part.ID'} AND
			status IN ('Y','N')
	};
	my %sth0=TOM::Database::SQL::execute($sql);
	while (my %db0_line=$sth0{'sth'}->fetchhash())
	{
		App::020::SQL::functions::to_trash
		(
			'ID' => $db0_line{'ID'},
			'db_h' => 'main',
			'db_name' => $App::510::db_name,
			'tb_name' => 'a510_video_part_attrs',
			'-journalize' => 1,
		);
	}
	
	# video_part
	App::020::SQL::functions::to_trash
	(
		'ID' => $env{'video_part.ID'},
		'db_h' => 'main',
		'db_name' => $App::510::db_name,
		'tb_name' => 'a510_video_part',
		'-journalize' => 1,
	);
	
	$XSGN{'TMP'}=$XSGN{'RESULT_success'};
	
	return 1;
}


