#!/usr/bin/perl
# USE UTF-8 !!!
package Tomahawk::module;
use open ':utf8', ':std';
use encoding 'utf8';
use utf8;
use strict;

use App::020::_init;
use App::210::_init;
use CVML;

=head1 NAME

210-page_detail.0.mdl

=cut

=head1 DESCRIPTION

Zobrazenie detailu položky

=cut

=head1 INPUTS

=over

=item *

B<ID> - ID záznamu

=item *

B<status> - default 'Y' - statusy stromu ktoré sa zobrazujú ( napr. 'YNT' )

=back

=cut


=head1 XSGN

=over

=item *

B<TMP> - default error

=item *

B<RESULT_success> - default ok vystup

=item *

B<%ID%>

=item *

B<%ID_entity%>

=item *

B<%ID_charindex%>

=item *

B<%name%>

=item *

B<%name_url%>

=item *

B<%datetime_create%>

=item *

B<%is_default%>

=item *

B<%lng%>

=item *

B<%status%>

=item *

B<%ID%>

=item *

B<#KEY#>

=item *

B<KEY> - kľúč

=item *

B<%key%>

=item *

B<%value%>

=back

 <DEFINITION id="TMP">
  Default error output
 </DEFINITION>
 
 <DEFINITION id="RESULT_success">
  <ID><%ID%></ID>
  <ID_entity><%ID_entity%></ID_entity>
  <ID_charindex><%ID_charindex%></ID_charindex>
  <name><%name%></name>
  <name_url><%name_url%></name_url>
  <datetime_create><%datetime_create%></datetime_create>
  <t_name><%t_name%></t_name>
  <is_default><%is_default%></is_default>
  <lng><%lng%></lng>
  <status><%status%></status>
  <keys>
 <#KEY#>
  </keys>
 </DEFINITION>
 
 <DEFINITION id="KEY">
  <<%key%>><%value%></<%key%>>
 <#KEY#>
 </DEFINITION>

=cut

sub execute
{
	my %env=@_;
	Tomahawk::GetXSGN('-convertvars'=>1) || return undef;
	
	
	if (!$env{'ID'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|ID|g;
		return 1;
	}
	
	my %a210=App::020::SQL::functions::get_ID(
		'db_h' => "main",
		'db_name' => $App::210::db_name,
		'tb_name' => "a210_page",
		'ID'      => $env{'ID'},
		'columns' => { '*' => 1 }
	);
	
	if (not $a210{'status'}=~/^[YN]$/)
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_get'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|ID|g;
		return 1;
	}
	
	$XSGN{'TMP'}=$XSGN{'RESULT_success'};
	
	foreach (keys %a210)
	{
		$XSGN{'TMP'}=~s|<%$_%>|$a210{$_}|g;
	}
	
	my $cvml = new CVML('data'=>$a210{'t_keys'});
	# a vytvor z neho hash
	my %key = %{$cvml->{'hash'}};
	foreach (keys %key)
	{
		main::_log("key '$_'='$key{$_}'");
		$XSGN{'NULL'}=$XSGN{'KEY'};
		
		$XSGN{'NULL'}=~s|<%key%>|$_|g;
		$XSGN{'NULL'}=~s|<%value%>|$key{$_}|g;
		
		$XSGN{'TMP'}=~s|<#KEY#>|$XSGN{'NULL'}|;
	}
	
	
	return 1;
}

