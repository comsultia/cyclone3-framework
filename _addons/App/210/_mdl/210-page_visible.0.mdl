#!/usr/bin/perl
# USE UTF-8 !!!
package Tomahawk::module;
use open ':utf8', ':std';
use encoding 'utf8';
use utf8;
use strict;

use App::020::_init;

=head1 NAME

210-page_visible.0.mdl

=cut

=head1 DESCRIPTION

Change visibility of item (in menu)

=cut

=head1 INPUTS

=over

=item *

B<ID> - ID of item

=item *

B<visible> - new visible

=back

=cut

=head1 XSGN

=over

=item *

B<TMP> - default error

=item *

B<RESULT_success> - success

=item *

B<RESULT_failure_no_input> - failure input

=item *

B<RESULT_failure_set> - can't set visibility

=item *

B<%ID%> - ID

=item *

B<%missing_parameter%> - missing parameter

=back

=cut

sub execute
{
	my %env=@_;
	Tomahawk::GetXSGN('-convertvars'=>1) || return undef;
	
	if (!$env{'ID'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|ID|g;
		return 1;
	}
	
	if (!$env{'visible'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|visible|g;
		return 1;
	}
	
	my $out;
	
	
	my %data=App::020::SQL::functions::get_ID(
		'db_h' => "main",
		'db_name' => $TOM::DB{'main'}{'name'},
		'tb_name' => "a210_page",
		'-journalize' => 1,
		'columns'=>
		{
			'visible' => 1,
			'status' => 1
		},
		'ID'   => $env{'ID'}
	);
	
	# this item has already visible with requested value
	if ($data{'visible'} eq $env{'visible'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_success'};
		$XSGN{'TMP'}=~s|<%ID%>|$env{'ID'}|g;
		$XSGN{'TMP'}=~s|<%visible%>|$data{'visible'}|g;
		return 1;
	}
	
	if ($data{'status'}=~/[YN]/)
	{
		$out=App::020::SQL::functions::update(
			'db_h' => "main",
			'db_name' => $TOM::DB{'main'}{'name'},
			'tb_name' => "a210_page",
			'-journalize' => 1,
			'ID'   => $env{'ID'},
			'columns' =>
			{
				'visible' => "'".$env{'visible'}."'"
			}
		);
	}
	else
	{
		# we can't set visible flag to trashed or deleted items
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_set'};
		$XSGN{'TMP'}=~s|<%ID%>|$env{'ID'}|g;
		return 1;
	}
	
	if ($out)
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_success'};
		$XSGN{'TMP'}=~s|<%ID%>|$env{'ID'}|g;
		
		my %data=App::020::SQL::functions::get_ID(
			'db_h' => "main",
			'db_name' => $TOM::DB{'main'}{'name'},
			'tb_name' => "a210_page",
			'-journalize' => 1,
			'columns'=>
			{
				'visible' => 1
			},
			'ID'   => $env{'ID'}
		);
		
		$XSGN{'TMP'}=~s|<%visible%>|$data{'visible'}|g;
		
	}
	else
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_set'};
		$XSGN{'TMP'}=~s|<%ID%>|$env{'ID'}|g;
		return 1;
	}
	
	return 1;
}

our $authors='roman.fordinal@comsultia.com';

