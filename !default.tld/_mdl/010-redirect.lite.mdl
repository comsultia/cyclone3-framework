#!/usr/bin/perl
# áéíóú - USE UTF-8 !!!
package Tomahawk::module;
use open ':utf8', ':std';
use encoding 'utf8';
use utf8;
use strict;

use App::020::_init;
use App::210::_init;

sub execute
{
	my %env=@_;
	
	if ($env{'link'})
	{
		$main::location=$env{'link'};
	}
	elsif ($env{'sitemap'})
	{
		my $path;
		foreach my $p(
			App::020::SQL::functions::tree::get_path(
				$env{'sitemap'},
				'db_h' => "main",
				'db_name' => $TOM::DB{'main'}{'name'},
				'tb_name' => "a210_page",
			)
		)
		{
			$path.="/".$p->{'name_url'};
		}
		$path=~s|^/||;
		$main::location="?|?a210_path=".$path;
	}
	
	return 1;
}

1;
